{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "EchoVault",
    "version": "0.1.0",
    "identifier": "com.n24q02m.echovault",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../src-web/dist"
    },
    "app": {
        "trayIcon": {
            "iconPath": "icons/icon.png",
            "iconAsTemplate": true
        },
        "windows": [
            {
                "title": "EchoVault",
                "width": 400,
                "height": 600,
                "resizable": false,
                "center": true,
                "decorations": true,
                "visible": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {}
}