{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "release-type": "rust",
    "packages": {
        ".": {
            "component": "echovault",
            "changelog-path": "CHANGELOG.md"
        }
    },
    "plugins": [
        {
            "type": "cargo-workspace",
            "merge": true
        }
    ],
    "changelog-sections": [
        {
            "type": "feat",
            "section": "Features"
        },
        {
            "type": "fix",
            "section": "Bug Fixes"
        },
        {
            "type": "perf",
            "section": "Performance"
        },
        {
            "type": "refactor",
            "section": "Refactoring"
        },
        {
            "type": "docs",
            "section": "Documentation"
        },
        {
            "type": "chore",
            "section": "Miscellaneous",
            "hidden": true
        },
        {
            "type": "ci",
            "section": "Continuous Integration",
            "hidden": true
        }
    ]
}